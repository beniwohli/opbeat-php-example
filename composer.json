{
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "echo-it/opbeat-php",
        "version": "0.1",
        "description": "Error logger for Opbeat",
        "keywords": ["opbeat"],
        "require": {
          "php": ">=5.3.0"
        },
        "source": {
          "url": "https://github.com/piquadrat/opbeat-php",
          "type": "git",
          "reference": "feature/set-default-endpoint"
        },
        "autoload": {
          "classmap": ["opbeat/", "opbeat/transport/", "opbeat/message/part/"]
        }
      }
    }
  ],
  "require" : {
    "silex/silex": "~1.1",
    "monolog/monolog": "~1.7",
    "echo-it/opbeat-php": "*"
  },
  "require-dev": {
    "heroku/heroku-buildpack-php": "*"
  }
}
